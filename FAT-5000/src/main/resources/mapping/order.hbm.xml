<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name = "by.andersenlab.travelagency.model.Order" table = "USERORDER">

        <id name = "id" column = "id" type = "int">
            <generator class="native"/>
        </id>

        <property name = "nameOrder" column = "nameOrder" type = "string"/>
        <property name = "price" column = "price" type = "double"/>
        <property name = "idTour" column = "idTour" type = "int"/>
        <many-to-one name="userId" column="idUser" class="by.andersenlab.travelagency.model.User"/>
    </class>
</hibernate-mapping>